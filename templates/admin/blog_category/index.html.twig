{% extends 'layouts/admin_layout.html.twig' %}

{% block title %} Blog Kategorileri {% endblock %}

{% block body %}

    <div class="container" style="margin-top:20px">
    <h3>Blog Kategori Listesi </h3>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped" style="margin: 50px 0 50px 0">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col-2">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        {% for blogCategory in blogCategories %}
            <tr>
            <th scope="row">{{ loop.index }}</th>
            <td>{{ blogCategory.CategoryName }}</td>
            <td>
                <a href="/admin/blog/kategori/edit/{{blogCategory.id}}" class="btn btn-info">Düzenle</a>
                <a class="btn btn-danger" href="/admin/blog/kategori/sil/{{blogCategory.id}}">Sil</a>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
