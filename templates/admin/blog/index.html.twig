{% extends 'layouts/admin_layout.html.twig' %}

{% block title %} Blog Anasayfa {% endblock %}

{% block body %}

    <div class="container" style="margin-top:20px">
    <h3>Blog Listesi </h3>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table table-striped" style="margin: 50px 0 50px 0">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Tarih</th>
            <th scope="col">Kategori</th>            
            <th scope="col-2">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
            <th scope="row">{{ loop.index }}</th>
            <td>{{ blog.title }}</td>
            <td>{{ blog.createdat|date("d.m.Y") }}</td>
            <td>{{ blog.category.categoryName }}</td>
            <td>
                <a href="/admin/blog/edit/{{blog.id}}" class="btn btn-info">Düzenle</a>
                <a class="btn btn-danger" href="/admin/blog/sil/{{blog.id}}">Sil</a>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
