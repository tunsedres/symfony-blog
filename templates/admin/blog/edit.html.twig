{% extends "layouts/admin_layout.html.twig" %}

{% block title %} Blog Ekle {% endblock %}

{% block body %}

<div class="container">

    <div class="row" style="margin: 50px 0 50px 0">
        <div class="col-md-6 col-md-offset-2">
            {% if errors is defined %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in errors  %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
            <form name="blog_form" action={{ path("admin_blog_update", {id:blog.id}) }} method="post">
            
            <div id="blog_form">
            <div class="form-group">
                <label for="blog_form_title" class="form-control-label required">Title</label>
                <input type="text" id="blog_form_title" name="title" value="{{blog.title}}" required="required" class="form-control">
            </div>
            <div class="form-group">
                <label for="blog_form_category" class="form-control-label required">Category</label>
                <select class="form-control" name="category" id="category">
                    {% for category in categories %}
                        <option {{ blog.category.id == category.id ? "selected" : '' }}  value="{{category.id}}">{{ category.categoryName }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="blog_form_content" class="form-control-label required">Content</label>
                <textarea id="blog_form_content" name="content" required="required" class="form-control">{{blog.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="blog_form_tags" class="form-control-label required">Tags</label>
                <input type="text" id="blog_form_tags" name="tags" value="{{blog.tags}}" required="required" class="form-control"></div>
            <div class="form-group">
                
                <button type="submit" id="blog_form_save" name="blog_form[save]" class="btn-secondary btn">Save</button>
            </div>
                
            </div>
            </form>
        </div>
    </div>

</div>

{% endblock %}